<script>
    const API_KEY = 'c24f4e30';

    // ðŸ”´ DATABASE: Yahan apni movies ki details update karein
    const movies = [
        { imdbId: 'tt20833112', category: 'Bollywood', quality: 'HD', gdtot: 'https://gdtot.link/sitaramam', stream: 'xxxxxx' },
        { imdbId: 'tt1517268', category: 'Hollywood', quality: '4K', gdtot: 'https://gdtot.link/barbie', stream: 'yyyyyy' },
        { imdbId: 'tt14948432', category: 'Webseries', quality: '1080p', gdtot: 'https://gdtot.link/series', stream: 'zzzzzz' }
    ];

    async function displayMovies() {
        const grid = document.getElementById('movieGrid');
        grid.innerHTML = '';

        for (let m of movies) {
            try {
                const res = await fetch(`https://www.omdbapi.com/?i=${m.imdbId}&apikey=${API_KEY}`);
                const data = await res.json();

                if (data.Response === "True") {
                    const card = document.createElement('div');
                    card.className = `movie-card ${m.category}`;
                    card.innerHTML = `
                        <span class="badge">${m.quality}</span>
                        <img src="${data.Poster !== 'N/A' ? data.Poster : 'https://via.placeholder.com/300x450?text=No+Poster'}" alt="${data.Title}">
                        <div class="movie-info">
                            <h4>${data.Title}</h4>
                            <p style="font-size:0.7rem; opacity:0.7;">${data.Year} | ${m.category}</p>
                        </div>
                    `;
                    card.onclick = () => openModal(data.Title, m.stream, m.gdtot);
                    grid.appendChild(card);
                }
            } catch (err) { console.error("Error loading movie:", err); }
        }
    }

    function openModal(title, streamId, gdtot) {
        document.getElementById('modalTitle').innerText = title;
        document.getElementById('playerArea').innerHTML = `<iframe src="https://streamtape.com/e/${streamId}" allowfullscreen></iframe>`;
        document.getElementById('downloadLink').href = gdtot;
        document.getElementById('movieModal').style.display = 'flex';
    }

    function closeModal() {
        document.getElementById('movieModal').style.display = 'none';
        document.getElementById('playerArea').innerHTML = '';
    }

    function searchMovies() {
        let input = document.getElementById('searchBar').value.toLowerCase();
        let cards = document.getElementsByClassName('movie-card');
        for (let card of cards) {
            card.style.display = card.innerText.toLowerCase().includes(input) ? "block" : "none";
        }
    }

    function filterCat(cat) {
        let cards = document.getElementsByClassName('movie-card');
        for (let card of cards) {
            if (cat === 'all') card.style.display = "block";
            else card.style.display = card.classList.contains(cat) ? "block" : "none";
        }
    }

    // Modal close when clicking outside
    window.onclick = (event) => {
        if (event.target == document.getElementById('movieModal')) closeModal();
    }

    displayMovies();
</script>

</body>
